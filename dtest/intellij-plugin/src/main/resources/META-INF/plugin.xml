<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>org.jetbrains.plugins.template</id>
    <name>Template</name>
    <vendor>JetBrains</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.metametamoon.dtest.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.metametamoon.dtest.services.MyProjectService"/>
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="com.github.metametamoon.dtest.MarkerProvider"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.metametamoon.dtest.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
