<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.metametamoon.dtest</id>
    <name>Core</name>
    <vendor>com.github.metametamoon</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>org.jetbrains.kotlin</depends>
    <extensions defaultExtensionNs="com.intellij">
        <runLineMarkerContributor language="kotlin"
                                  implementationClass="com.github.metametamoon.dtest.DtestRunLineContributor"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.metametamoon.dtest.DtestJbConfigurable"
                id="com.github.metametamoon.dtest.DtestJbConfigurable"
                displayName="Dtest Settings"/>
        <multipleRunLocationsProvider implementation="com.github.metametamoon.dtest.DtestMultipleRunLocationsProvider"/>
        <codeInsight.lineMarkerProvider implementationClass="com.github.metametamoon.dtest.DtestNavigateToTestMarkerProvider" language="kotlin"/>
        <psi.referenceContributor implementation="com.github.metametamoon.dtest.DtestReferenceContributor" language="kotlin"/>
<!--        <psi.referenceProvider providerClass="com.github.metametamoon.dtest.DtestReferenceProvider" language="kotlin"/>-->
    </extensions>

    <actions>
        <action id="com.github.metametamoon.dtest.FreezeTestFileAction"
                class="com.github.metametamoon.dtest.FreezeTestFileAction" text="Load To Dtest Settings">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
